---
import Layout from '../layouts/Layout.astro';
import Views from '@/views';
import 'antd/dist/reset.css';
---

<Layout title="GPT">
  <Views client:only="react" />
</Layout>

<style is:global>
  p {
    line-height: 30px;
  }

  @media screen and (max-width: 768px) {
    #views {
      width: 100vw;
      height: 100%;
    }
  }

  @media screen and (min-width: 768px) and (max-width: 1190px) {
    #views {
      width: 90vw;
      height: 80%;
    }
  }
</style>
